<%= form_for [@room, @equipment] , :html => { :class => 'form-horizontal' }, :validate => true   do |f| %>
  	<div class="control-group ">
	 <%= f.label :"Nombre herramienta", :class => 'control-label' %>
	 <div class="controls">
  		 <%= f.text_field :tool, :class => 'text_field' %>
	 </div>
	</br>
	 <%= f.label :"Marca", :class => 'control-label' %>
	 <div class="controls">
  		<%= f.text_field :trademark, :class => 'text_field' %>
   </div>
   </br>   
   <%= f.label :"Cantidad", :class => 'control-label' %>   
	 <div class="controls">
  	<%= f.number_field :quantity, :class => 'text_field' %>
   </div>
  <div class="form-actions">
    <%= f.button @boton, :class => 'active icon-ok-sign btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancelar")), room_path(@room) , :class => 'btn' %>
  </div>
<% end %>
