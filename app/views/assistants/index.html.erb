<h1>Listing assistants</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Lastname</th>
    <th>Surname</th>
    <th>Instrument</th>
    <th>Nickname</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assistants.each do |assistant| %>
  <tr>
    <td><%= assistant.name %></td>
    <td><%= assistant.lastname %></td>
    <td><%= assistant.surname %></td>
    <td><%= assistant.instrument %></td>
    <td><%= assistant.nickname %></td>
    <td><%= link_to 'Show', assistant %></td>
    <td><%= link_to 'Edit', edit_assistant_path(assistant) %></td>
    <td><%= link_to 'Destroy', assistant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

