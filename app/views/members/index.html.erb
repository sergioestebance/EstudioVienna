<h1>Listing members</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Lastname</th>
    <th>Surname</th>
    <th>Instrument</th>
    <th>Group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.name %></td>
    <td><%= member.lastname %></td>
    <td><%= member.surname %></td>
    <td><%= member.instrument %></td>
    <td><%= member.group_id %></td>
    <td><%= link_to 'Show', group_member_path %></td>
    <td><%= link_to 'Edit', edit_group_member_path(member) %></td>
    <td><%= link_to 'Destroy', group_member_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

