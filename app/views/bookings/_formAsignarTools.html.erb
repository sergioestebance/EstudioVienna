<%= form_for @booking, :html => { :class => 'form-horizontal' } do |f| %>

<div class="control-group">
  <P>selecciona herramientas adicionales</P>
  <div class="controls">

<%= f.collection_select :tool_ids, Tool.order(:name), :id, :name, {}, 
    {multiple: true} %>
  </div>
</div>
<div class="form-actions">
  <%= f.button " Solicitar Instrumento", :class => 'active icon-ok-sign btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancelar")),
              booking_path(@booking), :class => 'btn' %>
</div>

<% end %>